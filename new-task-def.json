{
  "family": "facilitator-production",
  "containerDefinitions": [
    {
      "name": "facilitator",
      "image": "518898403364.dkr.ecr.us-east-2.amazonaws.com/facilitator:v1.1.0-blacklist-stable",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "RPC_URL_HYPEREVM_TESTNET",
          "value": "https://rpc.hyperliquid-testnet.xyz/evm"
        },
        {
          "name": "SIGNER_TYPE",
          "value": "private-key"
        },
        {
          "name": "PORT",
          "value": "8080"
        },
        {
          "name": "RPC_URL_CELO",
          "value": "https://rpc.celocolombia.org"
        },
        {
          "name": "RPC_URL_BASE_SEPOLIA",
          "value": "https://sepolia.base.org"
        },
        {
          "name": "RPC_URL_OPTIMISM_SEPOLIA",
          "value": "https://sepolia.optimism.io"
        },
        {
          "name": "RUST_LOG",
          "value": "info"
        },
        {
          "name": "HOST",
          "value": "0.0.0.0"
        },
        {
          "name": "RPC_URL_POLYGON_AMOY",
          "value": "https://polygon-amoy.drpc.org"
        },
        {
          "name": "RPC_URL_CELO_SEPOLIA",
          "value": "https://rpc.ankr.com/celo_sepolia"
        },
        {
          "name": "RPC_URL_AVALANCHE_FUJI",
          "value": "https://avalanche-fuji-c-chain-rpc.publicnode.com"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/facilitator-production",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "2048",
  "taskRoleArn": "arn:aws:iam::518898403364:role/facilitator-production-ecs-task",
  "executionRoleArn": "arn:aws:iam::518898403364:role/facilitator-production-ecs-execution"
}
